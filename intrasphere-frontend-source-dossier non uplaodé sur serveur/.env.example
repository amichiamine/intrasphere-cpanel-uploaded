# IntraSphere - Example environment configuration
# Copy this file to ".env" and fill in the values for your environment.
# For cPanel Node.js deployment, set these as Application Environment Variables in cPanel.

# Server
NODE_ENV=production
PORT=5000

# Security
# Generate a long random string, e.g., using `openssl rand -base64 48`
SESSION_SECRET=change_me_to_a_long_random_string
BCRYPT_SALT_ROUNDS=12

# Database configuration (choose ONE: PostgreSQL OR MySQL)
# PostgreSQL (e.g., Neon, RDS, or any managed Postgres)
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/intrasphere?sslmode=require

# MySQL (recommended on shared cPanel hosting)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=cpanel_mysql_user
# MYSQL_PASSWORD=cpanel_mysql_password
# MYSQL_DATABASE=cpanel_mysql_dbname
# MYSQL_SSL=false

# Email (optional - for notifications)
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@intrasphere.local

# File upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.png,.gif
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# Features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_FILE_UPLOAD=true
ENABLE_FORUM=true
ENABLE_TRAINING=true
